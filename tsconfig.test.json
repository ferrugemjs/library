{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "moduleResolution": "classic",
        "outDir": "./test/app",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./",
        "lib": [
            "ESNext",
            "dom",
            "es6",
            "scripthost"
        ],
        "paths": {
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ],
    "compileOnSave": false
}